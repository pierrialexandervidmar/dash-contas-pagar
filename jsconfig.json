{
  "compilerOptions": {
    "target": "ES6", // Versão do JavaScript para compilar
    "module": "ESNext", // Sistema de módulos
    "baseUrl": "./", // Base para caminhos relativos
    "paths": {
      "@/*": ["resources/js/*"] // Alias para o diretório src
    }
  },
  "include": [
    "resources/js/**/*.js", // Diretórios e arquivos incluídos
    "resources/js/**/*.vue",
  ],
  "exclude": [
    "node_modules", // Diretórios a serem excluídos
    "dist"
  ]
}
